<p>Reviews for <%= @product.name %></p>

<% @product.reviews.each do |review| %>
	<div class="review">
    <div class="poster">
			<% if review.user != nil %>
				<em> by <%= review.user.name %></em>
				Added on: <%= review.created_at %>
			<% end %>
		</div>
		<p class="comment">
			<%= review.comment %>
		</p>
	</div>
<% end %>